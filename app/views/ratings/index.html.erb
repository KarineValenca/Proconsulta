	<div class="row-fluid">
	<div class="span4">
	<body style= "width:1200px">
		<h2>Região:</h2> <h3><%= current_user.address_user%></h3>
	<left>
	</div>	
	<center>
		<h1>Avaliar Unidade do Procon</h1>
		<div class="span7">
					<table class="table table-striped">
						<thead>
							<tr>
							    <th>ID</th>
							    <th>Endereço</th> 
							    <th colspan = "3"></th>
						  	</tr>
						</thead>
						<tbody id="unity_procons">
						<% unity_procons.each do |un| %>
						      	<tr>
						      	  <h6>
							        <td><%= link_to un.id, '/unity_procons/'+un.id.to_s %></td>
							        <td><%= un.address_unity_procon %></td>
							      </h6>
						        </tr>
						<% end %>
					</tbody>
				</table>
				<center>
					
				</center>
			</center>
		</div>
	</div>

<% else %>



<% end %>