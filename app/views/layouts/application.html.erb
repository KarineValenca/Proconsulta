<!DOCTYPE html>
<html>
  <head>
    
    <%= stylesheet_link_tag    "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="assets/css/bootstrap-responsive.css" rel="stylesheet">
    </head>
  
  <body>

  <div class="navbar navbar-inverse">
<div class="navbar-inner">
<div class="container">
<!-- .btn-navbar is used as the toggle for collapsed navbar content -->
<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
<span class="icon-bar"></span>
<span class="icon-bar"></span>
<span class="icon-bar"></span>
</a>
<!-- Be sure to leave the brand out there if you want it shown -->
<a class="brand" href="#"><img src="assets/PROCONSULTA.png"></a>
<ul class="nav">
<li><%= link_to "Home", root_path%></li>  
<li><%= link_to "Legislação"%></li>
<li><%= link_to "Procons" %></li>
<li><%= link_to "Atendimentos" %></li>
<li><%= link_to "Fornecedores" %></li>
<% if signed_in? %>
<li><%= link_to "Usuários", '/allusers' %></li>
<li id="fat-menu" class="dropdown">
<a href="#" class="dropdown-toggle" data-toggle="dropdown">
Sua Conta <b class="caret"></b>
</a>
<ul class="dropdown-menu">
<li><%= link_to "Conta", current_user %></li>
<li><%= link_to "Editar", '/users/'+current_user.id.to_s+'/edit' %></li>
<li class="divider"></li>
<li>
<%= link_to "Deslogar", signout_path, method: "delete" %>
</li>
</ul>
</li>
<% else %>
<li><%= link_to "Logar", signin_path %></li>
<% end %>
</ul>
</ul>
<!-- Everything you want hidden at 940px or less, place within here -->
<div class="nav-collapse collapse">
<!-- .nav, .navbar-search, .navbar-form, etc -->
</div>
</div>
</div>
</div>

<%= yield %>

  </body>
</html>