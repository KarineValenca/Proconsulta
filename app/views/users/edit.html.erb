<%= form_for(@user) do |f| %>
    <center>    
    <%= render 'shared/error_messages' %>
    
    <%= f.label :name_user, "Nome: " %>
    <%= f.text_field :name_user %></br>

    <%= f.label :adress_user, "Endereço:" %>
    <%= f.text_field :adress_user %></br>

    <%= f.label :email_user, "E-mail" %>
    <%= f.text_field :email_user %></br>

    <%= f.label :password, "Senha" %>
    <%= f.password_field :password %></br>

    <%= f.submit "Salvar mudanças", class: "btn btn-large btn-primary" %>
    </center>
<% end %>