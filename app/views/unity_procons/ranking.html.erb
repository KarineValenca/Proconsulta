<% provide(:title, "Ranking de Procons") %>
<title><%= yield(:title) %></title>

<div>
    <div class="container">
		<center>
			<h1>Ranking</h1>
		</center>
		<center>
			<table class="table table-striped" id="ranking">
				<thead>
					<tr>
					    <th>Posição</th>
					    <th>Pontuação</th> 
					    <th>ID</th> 
					    <th>UF</th>
					    <th>Endereço</th> 
					    <th>Telefone</th>
					    <th>Email</th> 
					    <th colspan = "3"></th>
				  	</tr>
				</thead>
				<tbody>
				<% count = 1 %>	
				<% @unity_procons = UnityProcon.order('average_pontuation DESC') %>
				<% @unity_procons.each do |un| %>
					<tr>
				      <h6>
				        <td><%= count %></td>
				        <td><%= un.average_pontuation %></td>
				        <td><%= link_to un.id, '/unity_procons/'+un.id.to_s %></td>
				        <td><%= un.uf_procon %></td>
				        <td><%= un.address_unity_procon %></td>
				        <td><%= un.list_phones %></td>
				        <td><%= un.email_unity_procon %></td>

				        <% count+= 1%>
				      </h6>
		            </tr>
				<% end %>
				</tbody>
			</table>
		</center>
	</div>
</div>


