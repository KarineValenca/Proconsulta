<% provide(:title, "Unidade do Procon") %>
<title><%= yield(:title) %></title>
<% a = @unity_procon %>
<center>
<h1>Unidade do Procon <%= @unity_procon.id %>:</h1></br>
</center>
<div class="container-fluid">
	<div class="row-fluid">

		<div class="span8">
			<body style= "width:1200px">
				<font face="verdana" color="gray">
					Endereço:
				</font>
				<div align="justify">
					<%= a.address_unity_procon %>
				</div></br>
				<font face="verdana" color="gray">
					Coordenador:
				</font>
				<div align="justify">
					<%= a.name_coordinator_unity_procon %>
				</div></br>
				<font face="verdana" color="gray">
					UF:
				</font>
				<div align="justify">
					<%= a.uf_procon %>
				</div></br>
				<font face="verdana" color="gray">
					Email:
				</font>
				<div align="justify">
					<%= a.email_unity_procon %>
				</div></br>
				</h5>
			</body>
			<left>
		</div>

		<div class="span4">
			<center>
				<body style= "width:1200px">
					<h2>Avalie essa unidade!</h2>

					<label>
						<input type="radio"  class="search_type" name="search_type" value="POSITIVO" checked="checked" /> +
					</label>
					
					<label>
						<input type="radio"  class="search_type" "glyphicon glyphicon-minus" name="search_type" value="NEGATIVO" checked="checked" /> -
					</label>

					<br>
						Descrição:
						<textarea class="form-control" rows="3"></textarea>
					<br>

					<%= button_to "Avaliar", { :controller => :unity_procons, :action => :add_rating } %>
				</body>
			</center>
		</div>
	</div>
</div>

<style>
.btn 
{
   -webkit-border-radius: 20px;
   -moz-border-radius: 20px;
   border-radius: 20px;
}
