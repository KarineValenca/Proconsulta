					<b>
					<input type="checkbox" name="RN"> SIGLA
					<input type="checkbox" name="PB"> SIGLA
					<input type="checkbox" name="Sul"> SIGLA
					<input type="checkbox" name="Centro-Oeste"> SIGLA
					<input type="checkbox" name="Sudeste"> SIGLA
				</font>
